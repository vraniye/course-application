<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/learn_at_home" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="250dp"
        android:layout_height="62dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/fredoka_one_regular"
        android:lineHeight="28dp"
        android:text="For free, join now and start learning"
        android:textAlignment="center"
        android:textColor="#080E1E"
        android:textFontWeight="500"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="520dp"
        android:backgroundTint="#5B7BFE"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:fontFamily="@font/fredoka_one_regular"
        android:lineHeight="24dp"
        android:onClick="onClickLogin"
        android:text="login"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_for_app"
        android:ems="10"
        android:hint="*******"
        android:inputType="textPassword"
        android:password="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edLogin" />

    <EditText
        android:id="@+id/edLogin"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginTop="308dp"
        android:background="@drawable/btn_for_app"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="372dp"
        android:fontFamily="@font/fredoka_one_regular"
        android:lineHeight="28dp"
        android:text="Password"
        android:textAlignment="center"
        android:textColor="#080E1E"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="588dp"
        android:contextClickable="true"
        android:fontFamily="@font/fredoka_one_regular"
        android:lineHeight="28dp"
        android:onClick="onClickForgot"
        android:text="Not you member?"
        android:textAlignment="center"
        android:textColor="#7b7e87"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="612dp"
        android:contextClickable="true"
        android:fontFamily="@font/fredoka_one_regular"
        android:lineHeight="28dp"
        android:onClick="onClickGoogle"
        android:text="Google"
        android:textAlignment="center"
        android:textColor="#5B7BFE"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="588dp"
        android:contextClickable="true"
        android:fontFamily="@font/fredoka_one_regular"
        android:lineHeight="28dp"
        android:onClick="onClickSignUp"
        android:text="Signup"
        android:textAlignment="center"
        android:textColor="#5B7BFE"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="612dp"
        android:contextClickable="true"
        android:fontFamily="@font/fredoka_one_regular"
        android:lineHeight="28dp"
        android:onClick="onClickForgot"
        android:text="Use can use"
        android:textAlignment="center"
        android:textColor="#7b7e87"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="468dp"
        android:contextClickable="true"
        android:fontFamily="@font/fredoka_one_regular"
        android:lineHeight="28dp"
        android:onClick="onClickForgot"
        android:text="Forgot Password"
        android:textAlignment="center"
        android:textColor="#D6185D"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="280dp"
        android:fontFamily="@font/fredoka_one_regular"
        android:lineHeight="28dp"
        android:text="Email Address"
        android:textAlignment="center"
        android:textColor="#080E1E"
        android:textFontWeight="500"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="418dp"
        android:layout_height="70dp"
        android:background="#410FA3"
        android:fontFamily="@font/fredoka_one_regular"
        android:gravity="center"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
